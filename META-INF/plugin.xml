    <actions>
        <action id="Coddy.Expand" class="org.funivan.Coddy.Actions.ExpandAction" text="Expand code"
                description="Expand smart short code">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="control BACK_SLASH"/>
        </action>
        <action id="Coddy.ReloadConfiguration" class="org.funivan.Coddy.Idea.Actions.ReloadAction"
                text="Reload Coddy plugin"
                description="Reload Coddy plugin configuration ">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">

        <applicationService  serviceImplementation="org.funivan.Coddy.Productivity.UsageStatistic"/>


        <tipAndTrick file="TemplateInvoke.html"/>

        <projectConfigurable instance="org.funivan.Coddy.Project.SettingsForm" id="Coddy.Project.SettingsForm"
                             displayName="Fast Coding Plugin"/>

        <projectService serviceImplementation="org.funivan.Coddy.Project.Settings"/>


        <!--- General plugin settings -->
        <applicationConfigurable instance="org.funivan.Coddy.General.SettingsForm" id="Coddy.General.SettingsForm"
                                 displayName="Fast Coding Plugin"/>


        <applicationService serviceImplementation="org.funivan.Coddy.General.AppSettingsService"/>

        <productivityFeaturesProvider implementation="org.funivan.Coddy.Productivity.TemplatesProductivityFeatureProvider"/>

    </extensions>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.jetbrains.php</depends>


    <module-components>
        <component>
            <implementation-class>org.funivan.Coddy.Component</implementation-class>
        </component>
    </module-components>
</idea-plugin>
