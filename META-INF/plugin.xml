<idea-plugin version="2">
    <name>Coddy</name>
    <description><![CDATA[
        Improve your productivity.

        Author: Ivan Shcherbak dev@funivan.com
    ]]></description>
    <version>0.4.1</version>
    <vendor url="http://funivan.com/" email="dev@funivan.com">funivan.com</vendor>
    <idea-version since-build="138.184"/>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>
    <change-notes><![CDATA[

        <h2>0.4.1</h2>
        <ul>
            <li>Refactoring</li>
        </ul>

        <h2>0.4</h2>
        <ul>
            <li>File based templates</li>
            <li>Custom variables</li>
            <li>Statistic</li>
        </ul>

        <h2>0.3.4</h2>
        <ul>
            <li>Fix bug in latest EAP 138.184</li>
        </ul>

        <h2>0.3.3</h2>
        <ul>
            <li>Change stored directory</li>
